---
import Image from "astro/components/Image.astro";
---

<main class="h-full lg:h-screen w-screen pt-[90px] pb-[90px] lg:pb-0">
  <section class="flex flex-col lg:flex-row lg:flex-wrap p-4 h-full">
    <article class="w-full h-full lg:w-4/6 lg:h-1/3 lg:pr-2">
      <div
        class="border-solid border-2 border-gray-200 bg-zinc-50 h-full rounded-lg"
      >
        <Image
          src="/carousel.webp"
          alt="carousel"
          width="100"
          height="100"
          loading="lazy"
          class="w-full w-full object-fill"
        />
      </div>
    </article>
    <article class="w-full h-full mt-4 lg:w-2/6 lg:h-1/3 lg:pl-2 lg:mt-0">
      <div class="flex flex-col space-y-2 h-full">
        <div
          class="flex items-center justify-between p-4 border-solid border-2 border-gray-200 bg-gradient-to-r from-cyan-500 to-blue-500 h-2/6 rounded-lg"
        >
          <h2 class="text-lg lg:text-2xl font-bold text-white">
            Asistente Empresarial
          </h2>
          <label class="inline-flex items-center cursor-pointer">
            <input type="checkbox" value="" class="sr-only peer" />
            <div
              class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"
            >
            </div>
          </label>
        </div>
        <div
          class="flex justify-between p-4 border-solid border-2 border-gray-200 bg-zinc-50 h-4/6 rounded-lg"
        >
          <div class="flex flex-col space-y-2">
            <h2 class="text-2xl font-bold">Membresía ClickBalance</h2>
            <div class="flex justify-between bg-zinc-100 rounded-lg p-4">
              <div class="font-bold">
                <h4>Membresía</h4>
                <h4>12345</h4>
              </div>
              <div class="font-bold">
                <h4>Vencimiento</h4>
                <h4>2024/12/31</h4>
              </div>
            </div>
          </div>
          <div>
            <div class="relative w-[100%] h-[100%]">
              <svg class="w-full h-full" viewBox="0 0 36 36">
                <path
                  d="M18 2.0845
                    a 15.9155 15.9155 0 0 1 0 31.831
                    a 15.9155 15.9155 0 0 1 0 -31.831"
                  fill="none"
                  stroke="#eee"
                  stroke-width="3"></path>

                <path
                  d="M18 2.0845
                    a 15.9155 15.9155 0 0 1 0 31.831
                    a 15.9155 15.9155 0 0 1 0 -31.831"
                  fill="none"
                  stroke="#4F46E5"
                  stroke-width="3"
                  stroke-dasharray="100, 100"
                  stroke-dashoffset="75"></path>
              </svg>

              <div
                class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center"
              >
                <div class="flex flex-col">
                  <span class="text-4xl font-bold">90</span>
                  <span class="text-sm font-bold uppercase">Días Restantes</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
    <article class="w-full h-full lg:w-4/6 lg:h-2/3 lg:pr-2 pt-4">
      <div
        class="flex flex-col p-4 border-solid border-2 border-gray-200 bg-zinc-50 h-full rounded-lg"
      >
        <div class="flex justify-between">
          <div>
            <h2 class="text-lg lg:text-2xl font-bold">
              Comparativo Anual Ventas
            </h2>
            <h4 class="text-md lg:text-xl">
              Empresa de pruebas y sistemas S.A. de C.V
            </h4>
          </div>
          <div class="flex items-start lg:items-center space-x-2">
            <button class="group">
              <svg
                class="w-6 h-6 lg:w-8
            lg:h-8"
                viewBox="0 0 15 15"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  class="group-hover:fill-blue-500"
                  d="M2.5 6.5V6H2v.5zm0 4H2v.5h.5zm10-4h.5V6h-.5zm0 4v.5h.5v-.5zm1-7h.5v-.207l-.146-.147zm-3-3 .354-.354L10.707 0H10.5zM2 6.5v4h1v-4zm.5 4.5h1v-1h-1zM5 9.5v-2H4v2zM3.5 6h-1v1h1zM5 7.5A1.5 1.5 0 0 0 3.5 6v1a.5.5 0 0 1 .5.5zM3.5 11A1.5 1.5 0 0 0 5 9.5H4a.5.5 0 0 1-.5.5zM6 7.5v2h1v-2zm3 2v-2H8v2zm0-2A1.5 1.5 0 0 0 7.5 6v1a.5.5 0 0 1 .5.5zM7.5 11A1.5 1.5 0 0 0 9 9.5H8a.5.5 0 0 1-.5.5zM6 9.5A1.5 1.5 0 0 0 7.5 11v-1a.5.5 0 0 1-.5-.5zm1-2a.5.5 0 0 1 .5-.5V6A1.5 1.5 0 0 0 6 7.5zM10 6v5h1V6zm.5 1h2V6h-2zm1.5-.5V8h1V6.5zM10.5 11h2v-1h-2zm2.5-.5V9h-1v1.5zM2 5V1.5H1V5zm11-1.5V5h1V3.5zM2.5 1h8V0h-8zm7.646-.146 3 3 .708-.708-3-3zM2 1.5a.5.5 0 0 1 .5-.5V0A1.5 1.5 0 0 0 1 1.5zM1 12v1.5h1V12zm1.5 3h10v-1h-10zM14 13.5V12h-1v1.5zM12.5 15a1.5 1.5 0 0 0 1.5-1.5h-1a.5.5 0 0 1-.5.5zM1 13.5A1.5 1.5 0 0 0 2.5 15v-1a.5.5 0 0 1-.5-.5z"
                  fill="#000"></path>
              </svg>
            </button>
            <button class="group">
              <svg
                class="w-6 h-6 lg:w-8
            lg:h-8"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 485 485"
                xml:space="preserve"
                ><path
                  class="group-hover:fill-blue-500"
                  d="M430 102.509c-30.327 0-55 24.673-55 55a54.65 54.65 0 0 0 6.993 26.794l-61.444 61.445a54.65 54.65 0 0 0-26.794-6.993 54.65 54.65 0 0 0-26.794 6.993l-27.707-27.707a54.65 54.65 0 0 0 6.993-26.794c0-30.327-24.673-55-55-55s-55 24.673-55 55a54.65 54.65 0 0 0 6.993 26.794l-61.445 61.444A54.65 54.65 0 0 0 55 272.492c-30.327 0-55 24.673-55 55s24.673 55 55 55 55-24.673 55-55a54.64 54.64 0 0 0-6.993-26.793l61.445-61.444a54.65 54.65 0 0 0 26.794 6.993 54.65 54.65 0 0 0 26.794-6.993l27.707 27.707a54.65 54.65 0 0 0-6.993 26.794c0 30.327 24.673 55 55 55s55-24.673 55-55c0-9.724-2.547-18.86-6.993-26.794l61.444-61.444a54.65 54.65 0 0 0 26.794 6.993c30.327 0 55-24.673 55-55S460.327 102.509 430 102.509M55 352.491c-13.785 0-25-11.215-25-25s11.215-25 25-25 25 11.215 25 25-11.215 25-25 25m136.247-136.244c-13.785 0-25-11.215-25-25s11.215-25 25-25 25 11.215 25 25-11.215 25-25 25m102.508 102.507c-13.785 0-25-11.215-25-25s11.215-25 25-25 25 11.215 25 25-11.215 25-25 25M430 182.509c-13.785 0-25-11.215-25-25s11.215-25 25-25 25 11.215 25 25-11.215 25-25 25"
                ></path></svg
              >
            </button>
            <button class="group">
              <svg
                class="w-6 h-6 lg:w-8
            lg:h-8"
                viewBox="-2 0 19 19"
                xmlns="http://www.w3.org/2000/svg"
                class="cf-icon-svg"
                ><path
                  class="group-hover:fill-blue-500"
                  d="M13.55 15.256H1.45a.554.554 0 0 1-.553-.554V3.168a.554.554 0 1 1 1.108 0v10.98h11.544a.554.554 0 0 1 0 1.108zM3.121 13.02V6.888a.476.476 0 0 1 .475-.475h.786a.476.476 0 0 1 .475.475v6.132zm2.785 0V3.507a.476.476 0 0 1 .475-.475h.786a.476.476 0 0 1 .475.475v9.513zm2.785 0V6.888a.476.476 0 0 1 .475-.475h.786a.476.476 0 0 1 .475.475v6.132zm2.786 0v-2.753a.476.476 0 0 1 .475-.475h.785a.476.476 0 0 1 .475.475v2.753z"
                ></path></svg
              >
            </button>
            <button class="group">
              <svg
                class="w-6 h-6 lg:w-8
            lg:h-8"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  class="group-hover:fill-blue-500"
                  d="M12 2a1 1 0 0 1 1 1v10.586l2.293-2.293a1 1 0 0 1 1.414 1.414l-4 4a1 1 0 0 1-1.414 0l-4-4a1 1 0 1 1 1.414-1.414L11 13.586V3a1 1 0 0 1 1-1M5 17a1 1 0 0 1 1 1v2h12v-2a1 1 0 1 1 2 0v2a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2v-2a1 1 0 0 1 1-1"
                  fill="#0D0D0D"></path></svg
              >
            </button>
          </div>
        </div>
        <div class="overflow-hidden">
          <Image
            src="/graph.webp"
            alt="carousel"
            width="100"
            height="100"
            loading="lazy"
            class="h-full w-full"
          />
        </div>
      </div>
    </article>
    <article
      class="w-full h-full lg:w-2/6 lg:h-2/3 lg:pl-2 lg:mb-0 pt-4 overflow-hidden"
    >
      <div
        class="w-full h-full p-4 border-solid border-2 border-gray-200 bg-zinc-50 rounded-lg"
      >
        <h2 class="text-2xl font-bold">Actividad Reciente</h2>
        <div class="flex flex-col h-[90%] space-y-4">
          <Image
            src="/activity.webp"
            alt="activity graph"
            width="100"
            height="100"
            loading="lazy"
            class="w-full h-4/6 object-contain"
          />

          <Image
            src="/wave-graph.webp"
            alt="actviity graph"
            width="100"
            height="100"
            loading="lazy"
            class="w-full h-2/6 object-contain"
          />
        </div>
      </div>
    </article>
  </section>
</main>
